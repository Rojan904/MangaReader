<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
 <androidx.constraintlayout.widget.ConstraintLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="395dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <com.github.florent37.shapeofview.shapes.ArcView
            android:layout_width="match_parent"
            android:layout_height="300dp"

            app:shape_arc_cropDirection="inside"
            app:shape_arc_height="20dp"
            app:shape_arc_position="bottom">

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/kaneki">

            </pl.droidsonroids.gif.GifImageView>


        </com.github.florent37.shapeofview.shapes.ArcView>
    </RelativeLayout>


    <!--<androidx.recyclerview.widget.RecyclerView-->
    <!--    android:id="@+id/recyclerview"-->
    <!--    android:orientation="horizontal"-->

    <!--    android:layout_width="match_parent"-->
    <!--    android:layout_height="match_parent"/>-->

    <TextView
        android:id="@+id/week"
        android:layout_width="376dp"
        android:layout_height="27dp"
        android:text="Weekly Update"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#0B0B0B"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/coda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.157"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/relative">

    </TextView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="175dp"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/week">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:clickable="true"
            android:id="@+id/black"
            android:onClick="BlackClover"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="10dp"
            android:elevation="5dp"
            app:cardBackgroundColor="@color/colorWhite">



                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   android:scaleType="centerCrop"
                    android:src="@drawable/asta1">

                </ImageView>



        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="10dp"
            android:elevation="5dp">

            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/soma">

                </ImageView>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


     <TextView
         android:id="@+id/textView"
         android:layout_width="176dp"
         android:layout_height="24dp"
         android:fontFamily="@font/arimo"
         android:textStyle="bold"
         android:text="Black Clover S1-253"
         android:textColor="#0B0B0B"
         app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintHorizontal_bias="0.082"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

     <TextView
         android:id="@+id/textView2"
         android:layout_width="170dp"
         android:layout_height="wrap_content"
         android:text="Shokugeki no soma-Le Dessert-003"
         android:textStyle="bold"
         android:fontFamily="@font/arimo"
         android:textColor="#0B0B0B"
         app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintHorizontal_bias="0.893"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/linearLayout"
         app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/recommended"
        android:layout_width="376dp"
        android:layout_height="27dp"
        android:text="Recommended"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#0B0B0B"
        android:layout_marginTop="5dp"
        app:layout_goneMarginTop="10dp"
        android:fontFamily="@font/coda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.157"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

    </TextView>

 <LinearLayout
     android:id="@+id/linearLayout2"
     android:layout_width="0dp"
     android:layout_height="175dp"
     android:padding="10dp"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintHorizontal_bias="1.0"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/recommended">

     <androidx.cardview.widget.CardView
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:layout_margin="10dp"
         android:layout_weight="1"
         app:cardCornerRadius="10dp"
         android:elevation="5dp">

         <RelativeLayout
             android:id="@+id/rl2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">

             <ImageView
                 android:id="@+id/image3"
                 android:layout_width="match_parent"
                 android:layout_height="160dp"
                 android:scaleType="centerCrop"
                 android:src="@drawable/hunter">

             </ImageView>


         </RelativeLayout>

     </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="10dp"
            android:elevation="5dp">

            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/gintama">

                </ImageView>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


     <TextView
         android:id="@+id/textView3"
         android:layout_width="176dp"
         android:layout_height="24dp"
         android:text="Hunter x Hunter"
         android:textStyle="bold"
         android:fontFamily="@font/arimo"
         android:textColor="#0B0B0B"

         app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintHorizontal_bias="0.082"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

     <TextView
         android:id="@+id/textView4"
         android:layout_width="170dp"
         android:layout_height="24dp"
         android:text="Gintama"
         android:textStyle="bold"

         android:fontFamily="@font/arimo"
         android:textColor="#0B0B0B"
         app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintHorizontal_bias="0.893"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
         app:layout_constraintVertical_bias="0.0" />


     <LinearLayout
         android:id="@+id/linearLayout3"
         android:layout_width="0dp"
         android:layout_height="175dp"
         android:padding="10dp"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintHorizontal_bias="1.0"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/textView3">

         <androidx.cardview.widget.CardView
             android:focusable="true"
             android:clickable="true"

             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_margin="10dp"
             android:layout_weight="1"
             app:cardCornerRadius="10dp"
             android:elevation="5dp"
             app:cardBackgroundColor="@color/colorWhite">

             <RelativeLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content">

                 <ImageView
                     android:id="@+id/image5"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:scaleType="centerCrop"
                     android:src="@drawable/deathnote">

                 </ImageView>

             </RelativeLayout>

         </androidx.cardview.widget.CardView>


         <androidx.cardview.widget.CardView
             android:focusable="true"
             android:clickable="true"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             app:cardCornerRadius="10dp"
             android:layout_margin="10dp"

             android:layout_weight="1"
             android:elevation="5dp">

             <RelativeLayout
                 android:id="@+id/rl3"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content">

                 <ImageView
                     android:id="@+id/image6"
                     android:layout_width="match_parent"
                     android:layout_height="160dp"

                     android:scaleType="centerCrop"
                     android:src="@drawable/naruto1">

                 </ImageView>


             </RelativeLayout>

         </androidx.cardview.widget.CardView>

     </LinearLayout>


     <TextView
         android:id="@+id/textView5"
         android:layout_width="176dp"
         android:layout_height="24dp"
         android:text="Death Note"
         android:textStyle="bold"

         android:fontFamily="@font/arimo"
         android:textColor="#0B0B0B"
         app:layout_constraintBottom_toBottomOf="@+id/linearLayout3"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintHorizontal_bias="0.082"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

     <TextView
         android:id="@+id/textView6"
         android:layout_width="170dp"
         android:layout_height="24dp"
         android:text="Naruto Shippuden"
         android:textStyle="bold"
         android:fontFamily="@font/arimo"
         android:textColor="#0B0B0B"
         app:layout_constraintBottom_toBottomOf="@+id/linearLayout3"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintHorizontal_bias="0.893"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
         app:layout_constraintVertical_bias="0.0" />

     <androidx.cardview.widget.CardView
         android:focusable="true"
         android:clickable="true"
         android:id="@+id/select"
         android:layout_width="match_parent"
         android:layout_height="180dp"
         android:layout_marginTop="20dp"
         app:cardCornerRadius="10dp"
         android:background="@color/colorPrimary"
         app:layout_constraintTop_toBottomOf="@id/textView6"
         tools:layout_editor_absoluteX="0dp">

         <TextView
             android:id="@+id/choose"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Select your favorite tags"
             android:textAlignment="center"
             android:textColor="#0B0B0B"
             android:textSize="24dp"
             android:textStyle="bold">

         </TextView>
         <TableRow
             android:layout_marginTop="50dp"
             app:layout_constraintTop_toBottomOf="@+id/choose"
             android:id="@+id/tbl1"
             android:layout_height="wrap_content"
             android:layout_marginLeft="30dp"
             android:layout_width="match_parent">
             <Button
                 android:id="@+id/shounen"
                 android:layout_width="110dp"
                android:textColor="@color/colorWhite"
                 android:layout_height="wrap_content"

                 android:text="#Shounen" />

             <Button
                 android:id="@+id/mystery"
                 android:layout_width="110dp"
                 android:layout_height="wrap_content"
                 android:textColor="@color/colorWhite"
                 android:layout_marginLeft="10dp"

                 android:text="#Mystery" />

             <Button
                 android:id="@+id/Romance"
                 android:text="#Romance"
                 android:layout_width="110dp"
                 android:textColor="@color/colorWhite"
                 android:layout_marginLeft="10dp"
                 android:layout_height="wrap_content"
               />

         </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_marginTop="105dp"
            android:layout_marginLeft="30dp"

           app:layout_constraintTop_toBottomOf="@+id/tbl1"
            android:layout_width="match_parent">
         <Button
             android:id="@+id/comedy"
             android:layout_width="110dp"
             android:layout_height="wrap_content"
             android:text="#Comedy"
             android:textColor="@color/colorWhite"
              />
            <Button
               android:id="@+id/fantasy"
                android:text="#Fantasy"
                android:layout_width="110dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
               />
        </TableRow>


     </androidx.cardview.widget.CardView>
     <TextView
         android:id="@+id/watch"
         android:layout_width="376dp"
         android:layout_height="27dp"
         android:text="Releasing Soon"
         android:textSize="20dp"
         android:textStyle="bold"
         android:textColor="#0B0B0B"
         android:layout_marginTop="10dp"
         android:fontFamily="@font/coda"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintHorizontal_bias="0.157"
         app:layout_constraintStart_toStartOf="@+id/guideline"
         app:layout_constraintTop_toBottomOf="@+id/select">

     </TextView>

     <LinearLayout
         android:id="@+id/linearLayout4"
         android:layout_width="0dp"
         android:layout_height="200dp"
         android:layout_marginTop="-20dp"
         android:padding="10dp"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintHorizontal_bias="1.0"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/watch">


         <androidx.cardview.widget.CardView
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_margin="10dp"
             android:layout_weight="1"
             app:cardCornerRadius="10dp"
             android:elevation="5dp">


             <ImageView
                 android:id="@+id/image7"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                 android:src="@drawable/aot">

             </ImageView>



     </androidx.cardview.widget.CardView>
     </LinearLayout>
     <TextView

         android:layout_width="376dp"
         android:layout_height="27dp"
         android:text="Attack On Titan Season-5"

         android:textStyle="bold"

         android:textColor="#0B0B0B"
         android:fontFamily="@font/arimo"
         app:layout_constraintBottom_toBottomOf="@+id/linearLayout4"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintHorizontal_bias="0.157"
         app:layout_constraintStart_toStartOf="@+id/guideline"
         app:layout_constraintTop_toBottomOf="@+id/linearLayout4"></TextView>


 </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>